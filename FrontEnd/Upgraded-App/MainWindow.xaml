<Window x:Class="FishLens_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishLens_App"
        mc:Ignorable="d"
        Title="FishLens" Height="{x:Static SystemParameters.PrimaryScreenHeight}" Width="{x:Static SystemParameters.PrimaryScreenWidth}"
        Background="#E8F4F8">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Sidebar: Media Selector-->
        <Border Grid.Column="0" Background="#1B4F5C" BorderThickness="0,0,1,0" BorderBrush="#0D3640">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Sidebar Header -->
                <StackPanel Grid.Row="0" Margin="20,30,20,20">
                    <TextBlock Text="Video Library" 
                               FontSize="24" 
                               FontWeight="SemiBold" 
                               Foreground="#E8F4F8"
                               Margin="0,0,0,10"/>
                    <Rectangle Height="2" Fill="#2D7A8F" Margin="0,0,0,0"/>
                </StackPanel>

                <!-- Video List -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="10,0,10,20">
                    <StackPanel x:Name="videoList" Margin="10,0"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!--Main Content: File Upload + Media Viewer-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Grid Grid.Row="0" Margin="40,30,40,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Name="Title" 
                               FontSize="56" 
                               FontFamily="Georgia" 
                               FontWeight="Bold"
                               Foreground="#0D3640">
                        FishLens
                    </TextBlock>
                    <TextBlock Text="Video Analysis Platform" 
                               FontSize="18" 
                               Foreground="#5A7C86"
                               Margin="2,5,0,0"/>
                </StackPanel>

                <Button Name="openFolder" 
                        Grid.Column="1"
                        Click="openFolder_Click" 
                        VerticalAlignment="Center"
                        Padding="20,12" 
                        Background="#1B4F5C" 
                        Foreground="White"
                        FontSize="14"
                        FontWeight="Medium"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                    </Button.Effect>
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2D7A8F"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                    📁 Choose Video Folder
                </Button>
            </Grid>

            <!-- Video Player Section -->
            <Border Grid.Row="1" 
                    Margin="40,0,40,20" 
                    Background="White" 
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="#C7D8DD">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.15"/>
                </Border.Effect>

                <Grid>
                    <!-- Placeholder when no video selected -->
                    <StackPanel x:Name="placeholderPanel"
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <TextBlock Text="🎬" 
                                   FontSize="80" 
                                   HorizontalAlignment="Center"
                                   Opacity="0.3"/>
                        <TextBlock Text="Select a video from the library" 
                                   FontSize="18" 
                                   Foreground="#8BA5AE"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,0"/>
                    </StackPanel>

                    <!-- Video Player -->
                    <MediaElement Name="videoPlayer" 
                                  LoadedBehavior="Manual"
                                  Stretch="Uniform"
                                  Margin="20"/>
                </Grid>
            </Border>

            <!-- Data Display Section -->
            <Border Grid.Row="2" 
                    Margin="40,0,40,40" 
                    Background="White" 
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="#C7D8DD">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.15"/>
                </Border.Effect>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="dataPanel" Margin="30">
                        <TextBlock Text="Analysis" 
                                   FontSize="24" 
                                   FontWeight="SemiBold"
                                   Foreground="#0D3640"
                                   Margin="0,0,0,15"/>
                        <TextBlock Text="Video data and analysis results will appear here" 
                                   FontSize="14" 
                                   Foreground="#8BA5AE"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>